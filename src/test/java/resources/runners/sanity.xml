<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sanity Suite" verbose="1">
    <groups>
        <run>
            <include name="sanity"></include>
        </run>
    </groups>
    <listeners>
        <listener class-name="com.tutorialsninja.customlisteners.CustomListeners"/>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
    </listeners>
    <test name="Sanity Test">
        <classes>
            <class name="com.tutorialsninja.testsuite.AccountLoginPageTest"/>
            <class name="com.tutorialsninja.testsuite.AccountRegisterPageTest"/>
            <class name="com.tutorialsninja.testsuite.DesktopsPageTest"/>
            <class name="com.tutorialsninja.testsuite.LaptopsAndNotebooksPageTest"/>
            <class name="com.tutorialsninja.testsuite.TopMenuTest"/>
        </classes>
    </test>
</suite>